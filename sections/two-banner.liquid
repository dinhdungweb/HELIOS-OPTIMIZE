{%- liquid
  assign section_classes = 'two-banner two-banner--' | append: section.id
-%}

<div id="section-id-{{ section.id }}" class="{% if section.settings.overlap_header %}header-overlap-section needs-alt-logo{% endif %}">
<section class="{{ section_classes }}" data-section-id="{{ section.id }}">
  <style>
    .two-banner--{{ section.id }} .two-banner__grid {display:grid; grid-template-columns:1fr; gap: {{ section.settings.gap | default: 16 }}px;}
    @media (min-width: 750px) {
      .two-banner--{{ section.id }} .two-banner__grid {grid-template-columns: 1fr 1fr;}
    }
    .two-banner--{{ section.id }} .two-banner__item {position: relative; overflow: hidden;}
    .two-banner--{{ section.id }} .two-banner__media img,
    .two-banner--{{ section.id }} .two-banner__media video,
    .two-banner--{{ section.id }} .two-banner__media iframe {width:100%; height:100%; object-fit:cover; display:block;}
    .two-banner--{{ section.id }} .two-banner__overlay {position:absolute; inset:0; display:flex; justify-content:center; align-items:center; z-index:5; pointer-events:none;}
    .two-banner--{{ section.id }} .two-banner__overlay.h-left {justify-content:flex-start;}
    .two-banner--{{ section.id }} .two-banner__overlay.h-right {justify-content:flex-end;}
    .two-banner--{{ section.id }} .two-banner__overlay.v-top {align-items:flex-start;}
    .two-banner--{{ section.id }} .two-banner__overlay.v-bottom {align-items:flex-end;}
    .two-banner--{{ section.id }} .two-banner__title-wrapper {color: var(--title-color, #fff); background: var(--bg-color, transparent); transform: translate(var(--x, 0), var(--y, 0));}
    .two-banner--{{ section.id }} .two-banner__link {position:absolute; inset:0; z-index:10;}
    .two-banner__grid .section-background-video .video-container--background video {position:relative}
  </style>

  <div class="two-banner__grid">
    {%- for block in section.blocks -%}
      {%- liquid
        assign img = block.settings.image
        assign vid = block.settings.video
        assign vurl = block.settings.video_url
        assign external_url = ''
        assign poster_image = img
        if poster_image == blank and vid != blank
          assign poster_image = vid.preview_image
        endif
        if vurl.type == 'youtube' and vurl.id != blank
          assign external_url = 'https://www.youtube.com/watch?v=' | append: vurl.id
        elsif vurl.type == 'vimeo' and vurl.id != blank
          assign external_url = 'https://vimeo.com/' | append: vurl.id
        endif
      -%}
      <div class="two-banner__item" {{ block.shopify_attributes }}>
        <div class="two-banner__media">
          {%- if vid != blank -%}
            {%- render 'inline-video', video_shopify: vid, image: poster_image, autoplay: false, loop: block.settings.video_loop -%}
          {%- elsif external_url != blank -%}
            {%- render 'inline-video', video_external: external_url, image: poster_image, autoplay: false, loop: block.settings.video_loop -%}
          {%- elsif img != blank -%}
            {%- render 'responsive-image', image: img -%}
          {%- else -%}
            <div style="aspect-ratio: 16/9; background:#eee; display:flex; align-items:center; justify-content:center;">Banner</div>
          {%- endif -%}
        </div>

        <div class="two-banner__overlay h-{{ block.settings.h_align }} v-{{ block.settings.v_align }}">
          <div class="two-banner__title-wrapper" style="--title-color: {{ block.settings.title_color }}; --bg-color: {{ block.settings.title_bg }}; --x: {{ block.settings.x_offset | default: 0 }}px; --y: {{ block.settings.y_offset | default: 0 }}px; text-align: {{ block.settings.text_align }}; padding: {{ block.settings.padding | default: 12 }}px;">
            {%- if block.settings.title != blank -%}
              <div class="two-banner__title">{{ block.settings.title }}</div>
            {%- endif -%}
          </div>
        </div>

        {%- if block.settings.link != blank -%}
          <a class="two-banner__link" href="{{ block.settings.link }}" aria-label="{{ block.settings.title | default: 'Banner' }}"></a>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</section>
</div>

{% schema %}
{
  "name": "Two Banners",
  "class": "section-two-banners",
  "settings": [
    {
      "type": "checkbox",
      "id": "overlap_header",
      "label": "Transparent header",
      "default": false
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Banner gap",
      "min": 0,
      "max": 64,
      "step": 1,
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {"type": "image_picker", "id": "image", "label": "Image"},
        {"type": "video", "id": "video", "label": "Shopify Video"},
        {"type": "video_url", "id": "video_url", "label": "Video Youtube/Vimeo", "accept": ["youtube", "vimeo"]},
        {"type": "checkbox", "id": "video_loop", "label": "Loop Video", "default": false},
        {"type": "url", "id": "link", "label": "Banner url"},
        {"type": "text", "id": "title", "label": "Title", "default": "Collection Title"},
        {"type": "color", "id": "title_color", "label": "Color", "default": "#ffffff"},
        {"type": "color", "id": "title_bg", "label": "Title Background", "default": "rgba(0,0,0,0.4)"},
        {"type": "select", "id": "h_align", "label": "Title Horizon Alignment", "default": "center", "options": [
          {"label": "Trái", "value": "left"},
          {"label": "Giữa", "value": "center"},
          {"label": "Phải", "value": "right"}
        ]},
        {"type": "select", "id": "v_align", "label": "Title Vertical Alignment", "default": "middle", "options": [
          {"label": "Trên", "value": "top"},
          {"label": "Giữa", "value": "middle"},
          {"label": "Dưới", "value": "bottom"}
        ]},
        {"type": "select", "id": "text_align", "label": "Text Alignment", "default": "center", "options": [
          {"label": "Trái", "value": "left"},
          {"label": "Giữa", "value": "center"},
          {"label": "Phải", "value": "right"}
        ]},
        {"type": "range", "id": "x_offset", "label": "Horizon (px)", "min": -200, "max": 200, "step": 5, "default": 0},
        {"type": "range", "id": "y_offset", "label": "Vertical (px)", "min": -200, "max": 200, "step": 5, "default": 0},
        {"type": "range", "id": "padding", "label": "Title Spacing (px)", "min": 0, "max": 60, "step": 1, "default": 12}
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {"name": "Two Banners", "category": "Image", "blocks": [{"type": "banner"}, {"type": "banner"}]}
  ]
}
{% endschema %}